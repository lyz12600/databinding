<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="EditTextWithMsg">
    <attr format="string" name="lzg_input_content"/>
    <attr format="string" name="lzg_msg_content"/>
    <attr format="color|reference" name="lzg_msg_text_color"/>
    <attr format="dimension|reference" name="lzg_msg_text_size"/>
    <attr format="dimension|reference" name="lzg_input_text_size"/>
    <attr name="lzg_msg_position">
      <enum name="show_at_bottom" value="0"/>
      <enum name="show_at_right" value="1"/>
    </attr>
    <attr format="boolean" name="lzg_show_msg_content"/>
    <attr format="dimension|reference" name="lzg_input_content_width"/>
    <attr format="dimension|reference" name="lzg_input_content_height"/>
    <attr name="lzg_input_content_gravity">
      <enum name="left" value="0"/>
      <enum name="center" value="1"/>
      <enum name="right" value="2"/>
    </attr>
    <attr name="lzg_input_type">
      <enum name="numberPassword" value="0"/>
      <enum name="number" value="1"/>
    </attr>
  </declare-styleable>
</resources>